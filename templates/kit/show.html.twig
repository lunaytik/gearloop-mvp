{% extends 'base.html.twig' %}

{% block title %}Kit{% endblock %}

{% block body %}
    <h1>Kit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kit.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ kit.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ kit.description }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ kit.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Stats</th>
                <td>{{ kit.stats ? kit.stats|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>ActivityType</th>
                <td>{{ kit.activityType.label }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ kit.season.label }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ kit.createdAt|date }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ kit.updatedAt|date }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-neutral" href="{{ path('app_kit_index') }}">back to list</a>

    <a class="btn btn-info" href="{{ path('app_kit_edit', {'id': kit.id}) }}">edit</a>

    {{ include('kit/_delete_form.html.twig') }}
{% endblock %}
