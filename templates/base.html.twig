<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BackpackShare{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('app_kit_index') }}">Explore</a>
                    {% if app.user %}
                        <div>{{ app.user.username }} ({{ app.user.email }})</div>
                        <a href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Login</a>
                        <a href="{{ path('app_register') }}">Register</a>
                    {% endif %}
                </li>
            </ul>
        </nav>
        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
